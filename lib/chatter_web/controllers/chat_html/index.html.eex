<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= get_csrf_token() %>">
    <title>Chatter - Live Chat</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <!-- Chat Container -->
    <div class="flex flex-col h-screen">

        <!-- Chat Header -->
        <header class="bg-blue-600 text-white text-center py-4 shadow-md">
            <h1 class="text-2xl font-bold">Chatter - Live Chat</h1>
        </header>

        <div class="flex flex-grow p-4">
            <!-- User List -->
            <aside class="w-1/4 bg-white p-4 shadow-md rounded-md">
                <h2 class="text-lg font-semibold">Active Users</h2>
                <ul class="space-y-2">
                    <li class="p-2 rounded-md bg-gray-200">User 1</li>
                    <li class="p-2 rounded-md bg-gray-200">User 2</li>
                    <li class="p-2 rounded-md bg-gray-200">User 3</li>
                </ul>
            </aside>

            <!-- Chat Window -->
            <main class="w-3/4 flex flex-col">
                <div id="chat-window" class="flex-grow bg-white p-4 shadow-md rounded-md overflow-y-auto h-96">
                    <div class="space-y-3" id="messages">
                        <div class="bg-gray-200 p-3 rounded-md w-fit max-w-xs">
                            <p class="text-sm">Hello, how are you?</p>
                        </div>
                        <div class="bg-blue-500 text-white p-3 rounded-md w-fit max-w-xs self-end">
                            <p class="text-sm">I'm good, thanks! How about you?</p>
                        </div>
                    </div>
                </div>

                <!-- Chat Input -->
                <form class="flex mt-3">
                    <input type="text" id="message-input" class="w-full p-3 rounded-l-md border border-gray-300 focus:outline-none" placeholder="Type your message..." />
                    <button type="button" id="send-button" class="bg-blue-500 text-white px-4 py-3 rounded-r-md hover:bg-blue-600">
                        Send
                    </button>
                </form>
            </main>
        </div>
    </div>

    <script>
        document.getElementById("send-button").addEventListener("click", function () {
            const messageInput = document.getElementById("message-input");
            const messageText = messageInput.value.trim();
            if (messageText !== "") {
                const messageList = document.getElementById("messages");
                const newMessage = document.createElement("div");
                newMessage.classList.add("bg-blue-500", "text-white", "p-3", "rounded-md", "w-fit", "max-w-xs", "self-end", "mt-2");
                newMessage.innerHTML = `<p class="text-sm">${messageText}</p>`;
                messageList.appendChild(newMessage);
                messageInput.value = "";
                messageList.scrollTop = messageList.scrollHeight;
            }
        });
    </script>

</body>
</html>
